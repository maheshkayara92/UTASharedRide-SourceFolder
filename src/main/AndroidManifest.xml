<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sharedride.utasharedride" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS"/>

    <application
        android:name="UTASharedRide"
        android:allowBackup="true"
        android:icon="@drawable/img1"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity android:name=".LoginActivity"
            android:theme="@style/MainTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity"
            android:theme="@style/MainTheme">
        </activity>
        <activity android:name=".CreateProfile"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".HomeScreen"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".CatWiseSearchResults"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".FutureRideDetails"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".BookRide"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".SelectedRideDetails"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".UpdateProfile"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".JoinRide"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>
